{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "types": ["types"],
      "sagas": ["sagas"],
      "icons": ["icons"],
      "hooks": ["hooks"],
      "actions": ["actions"],
      "reducers": ["reducers"],
      "store": ["store"],
      "selectors": ["selectors"],
      "modals": ["components/modals"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
